<%- include("../../partials/examplesHead") %>

<%- include("../../partials/exampleInfo") %>

<form class="eg" action="" method="post" data-busy="form">
  <% if(example.Forms && example.Forms[0].FormName) { %>
    <%- example.Forms[0].FormName %>
  <% } %>
  <div class="form-group">
    <label><%= example.Forms[0].Inputs[6].InputName %></label></br>
      <label><%= example.Forms[0].Inputs[7].InputName %></label>
      <input type="radio" name="deliveryMethod" value="SMS" checked /> 
      <label><%= example.Forms[0].Inputs[8].InputName %></label>
      <input type="radio" name="deliveryMethod" value="WhatsApp" /> 
  </div>
  <div class="form-group">
    <label for="countryCode"><%= example.Forms[0].Inputs[0].InputName %></label>
    <input type="tel" class="form-control" id="countryCode" name="countryCode"
          aria-describedby="accessHelp" placeholder="<%= example.Forms[0].Inputs[0].InputPlaceholder %>" required />
    <small id="accessHelp" class="form-text text-muted"><%= locals.manifest.SupportingTexts.HelpingTexts.CountryCodeText %></small>
  </div>
  <div class="form-group">
      <label for="phoneNumber"><%= example.Forms[0].Inputs[1].InputName %></label>
      <input type="tel" class="form-control" id="phoneNumber" name="phoneNumber"
             aria-describedby="accessHelp" placeholder="<%= example.Forms[0].Inputs[1].InputPlaceholder %>" required />
      <small id="accessHelp" class="form-text text-muted"><%= locals.manifest.SupportingTexts.HelpingTexts.PhoneNumberWontBeShared %></small>
  </div>
    <div class="form-group">
      <label for="signerName"><%= example.Forms[0].Inputs[2].InputName %></label>
      <input type="text" class="form-control" id="signerName" placeholder="<%= example.Forms[0].Inputs[2].InputPlaceholder %>" name="signerName"
             value="<%= locals.dsConfig.signerName %>" required>
    </div>
    <div class="form-group">
      <label for="ccCountryCode"><%= example.Forms[0].Inputs[3].InputName %></label>
      <input type="tel" class="form-control" id="ccCountryCode" name="ccCountryCode"
            aria-describedby="accessHelp" placeholder="<%= example.Forms[0].Inputs[3].InputPlaceholder %>" required />
      <small id="accessHelp" class="form-text text-muted"><%= locals.manifest.SupportingTexts.HelpingTexts.CountryCodeText %></small>
    </div>
    <div class="form-group">
      <label for="ccPhoneNumber"><%= example.Forms[0].Inputs[4].InputName %></label>
      <input type="tel" class="form-control" id="ccPhoneNumber" name="ccPhoneNumber"
             aria-describedby="accessHelp" placeholder="<%= example.Forms[0].Inputs[4].InputPlaceholder %>" required />
      <small id="accessHelp" class="form-text text-muted"><%= locals.manifest.SupportingTexts.HelpingTexts.PhoneNumberWontBeShared %></small>
    </div>
    <div class="form-group">
      <label for="ccName"><%= example.Forms[0].Inputs[5].InputName %></label>
      <input type="text" class="form-control" id="ccName" placeholder="<%= example.Forms[0].Inputs[5].InputPlaceholder %>" name="ccName"
             required>
    </div>
    <input type="hidden" name="_csrf" value="<%- csrfToken %>">
    <%- include("../../partials/submitButton") %>
</form>

<%- include("../../partials/examplesFoot") %>
