<%- include("../../partials/examplesHead") %>

<%- include("../../partials/exampleInfo") %>

<form action="" class="eg" method="post" data-busy="form">
    <div>
        <% if(example.Forms && example.Forms[0].FormName) { %>
          <%- example.Forms[0].FormName %>
        <% } %>
        
        <div class="form-group">
            <label for="signer1_email"><%= example.Forms[0].Inputs[0].InputName %></label>
            <input type="email" class="form-control" id="signer1Email" name="signer1Email"
                   aria-describedby="emailHelp" placeholder="<%= example.Forms[0].Inputs[0].InputPlaceholder %>" required
                   value="<%= locals.dsConfig.signerEmail %>" />
            <small id="emailHelp" class="form-text text-muted"><%= locals.manifest.SupportingTexts.HelpingTexts.EmailWontBeShared %></small>
        </div>
        <div class="form-group">
            <label for="signer1_name"><%= example.Forms[0].Inputs[1].InputName %></label>
            <input type="text" class="form-control" id="signer1Name" placeholder="<%= example.Forms[0].Inputs[1].InputPlaceholder %>" name="signer1Name"
                   value="<%= locals.dsConfig.signerName %>" required />
        </div>
    </div>
    <div>
        <% if(example.Forms && example.Forms[1].FormName) { %>
          <%- example.Forms[1].FormName %>
        <% } %>
        
        <div class="form-group">
            <label for="signer1_email"><%= example.Forms[1].Inputs[0].InputName %></label>
            <input type="email" class="form-control" id="signer2Email" name="signer2Email"
                   aria-describedby="emailHelp" placeholder="<%= example.Forms[1].Inputs[0].InputPlaceholder %>" required
                   value="" />
            <small id="emailHelp" class="form-text text-muted">The email for the second recipient must be different from the signer's email.</small>
        </div>
        <div class="form-group">
            <label for="signer1_name"><%= example.Forms[1].Inputs[1].InputName %></label>
            <input type="text" class="form-control" id="signer2Name" placeholder="<%= example.Forms[1].Inputs[1].InputPlaceholder %>" name="signer2Name"
                   value="" required />
            <br/>
        </div>
    </div>
    <input type="hidden" name="_csrf" value="<%- csrfToken %>">
    <%- include("../../partials/submitButton") %>
</form>

<%- include("../../partials/examplesFoot") %>
